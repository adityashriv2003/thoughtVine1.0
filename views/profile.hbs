<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>User Profile</title>
</head>
<body>
    <h1>User Profile</h1>
    <form id="uploadForm" action="/upload-profile-pic" method="POST" enctype="multipart/form-data">
        <label for="profilePic">Upload Profile Picture:</label>
        <input type="file" id="profilePic" name="profilePic" accept="image/*" required>
        <button type="submit">Upload</button>
    </form>

    <div>
        <h2>Profile Picture:</h2>
        <img id="profilePicDisplay" src="{{user.profilePic}}" alt="Profile Picture" style="max-width: 300px; max-height: 300px;">
    </div>

    <script>
        document.getElementById('uploadForm').addEventListener('submit', function(event) {
            event.preventDefault();

            const formData = new FormData(this);

            fetch('/upload-profile-pic', {
                method: 'POST',
                body: formData
            })
            .then(response => {
                if (response.ok) {
                    return response.json();
                }
                throw new Error('Network response was not ok.');
            })
            .then(data => {
                // Update the image source to display the new profile picture
                document.getElementById('profilePicDisplay').src = '/uploads/' + data.filename;
            })
            .catch(error => {
                console.error('There was a problem with the fetch operation:', error);
            });
        });
    </script>
</body>
</html>
